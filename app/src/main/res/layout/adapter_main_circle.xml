<?xml version="1.0" encoding="utf-8"?><!-- 功能：第一级主Adapter布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/dp_10">

    <ImageView
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNameMainCircle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="张三"
            android:textColor="#3F51B5"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvContentMainCircle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="当地时间2019年11月9日，巴西圣贝尔纳多-杜坎普。8日下午，入狱1年零7个月的巴西前总统卢拉在联邦最高法庭裁定其随时可出狱后，正式离开在巴拉那州库里蒂巴的服刑处。"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvPictureAdapterMainCircle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/tvTimeAdapterMainCircle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="7小时前" />

            <ImageView
                android:id="@+id/ivCommentAdapterMainCircle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:src="@mipmap/comment_circle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/base_F0F0F0"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/aixin_circle" />

            <TextView
                android:id="@+id/tvPraiseAdapterMainCircle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:textColor="#697A9F"
                android:textSize="16sp" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvCommentAdapterMainCircle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>
